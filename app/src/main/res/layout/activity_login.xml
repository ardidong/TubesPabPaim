<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/daftarLayout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".DaftarActivity">


    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="84dp"
        android:background="@drawable/circle_tosca" />

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="120dp"
        android:layout_height="129dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="114dp"
        android:contentDescription="Deskripsi Logo"
        android:scaleType="fitXY"
        android:src="@drawable/icon_launcher" />
</RelativeLayout>



    <EditText
        android:id="@+id/UseremailET"
        android:layout_width="390dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="7dp"
        android:layout_marginTop="100dp"
        android:layout_marginStart="10dp"
        android:hint="Masukkan email anda"
        android:inputType="textEmailAddress" />


    <EditText
        android:id="@+id/UserpasswordET"
        android:layout_width="388dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="7dp"
        android:layout_marginStart="10dp"
        android:ems="10"
        android:hint="Masukkan password anda"
        android:inputType="textPassword" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="80dp"
        android:layout_height="wrap_content">




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:text="Jika anda belum punya akun silahkan " />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginEnd="57dp"

            android:onClick="masukKuy"
            android:text="Daftar!"
            android:textStyle="bold" />
</LinearLayout>

    <Button
        android:id="@+id/masukBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
      android:layout_marginEnd="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="26dp"
        android:background="@drawable/buttonsolusi"
        android:text="Masuk" />

</LinearLayout>
