<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:fillViewport="true"
    android:layout_height="match_parent"
    tools:context=".DetailMoodUser">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tanggalET"
            android:layout_marginTop="30dp"
            android:layout_marginStart="20dp"
            android:text="12/12/2019"/>
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/jamET"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:text="13.00"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="15sp"
            android:layout_marginStart="20dp"
            android:text="Pada waktu ini kamu merasa :"/>

        <ImageView
            android:layout_width="130dp"
            android:id="@+id/emotIV"
            android:layout_marginBottom="20dp"
            android:layout_height="130dp"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:textSize="15sp"
            android:layout_marginBottom="20dp"
            android:text="Ketika melakukan kegiatan "/>
        <TextView
            android:layout_width="350dp"
            android:id="@+id/judulKegiatanTV"
            android:paddingStart="20dp"
            android:paddingTop="10dp"

            android:textSize="20dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:background="@drawable/backgroundkegiatan"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="20dp"
            android:text="Nah, Lengkapnya"/>
        <TextView
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:paddingTop="10dp"
            android:textSize="20dp"

            android:id="@+id/detailKegiatanTV"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center"
            android:background="@drawable/button_detail_kegiatan"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="20dp"
            android:text="Dan kata kata yang kamu berikan"/>
        <TextView
            android:layout_width="350dp"
            android:paddingTop="10dp"
            android:paddingStart="20dp"
            android:textSize="20dp"
            android:id="@+id/quoteTV"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:background="@drawable/backgroundkegiatan"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Button
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:id="@+id/deleteBtn"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="20dp"
            android:gravity="center"
            android:text="HAPUS"
            android:background="@drawable/button_hapus"
            android:layout_gravity="center"
            />
        <Button
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:id="@+id/pindaheditBtn"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:text="edit"
            android:gravity="center"
            android:background="@drawable/button_hapus"
            android:layout_gravity="center"
            />
        </LinearLayout>



    </LinearLayout>

</ScrollView>