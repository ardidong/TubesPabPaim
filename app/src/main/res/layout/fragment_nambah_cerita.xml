<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#FFFFFF"
    android:fillViewport="true"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".NambahCeritaFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:background="#FFFFFF"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardElevation="5dp"
        app:cardCornerRadius="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/tampilanIsiKegiatan"
        android:orientation="vertical"
        android:background="@drawable/background_layout_kegiatan"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/judulIsi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:text="Cerita yuk, hari ini ngapain aja..."
            android:textSize="20sp" />

        <EditText
            android:layout_width="300dp"
            android:id="@+id/namakegiatanET"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:hint="Kegiatan apa yang kamu lakuin?"
            android:layout_marginTop="30dp"
            android:inputType="text"
            android:background="@drawable/backgroundkegiatan"
            android:layout_gravity="center"
            />
        <EditText
            android:layout_width="300dp"
            android:id="@+id/detailkegiatanET"
            android:layout_height="300dp"
            android:hint="Ceritain Detailnya dongg.."
            android:layout_marginTop="30dp"
            android:inputType="textMultiLine"
            android:paddingLeft="20dp"
            android:paddingTop="20dp"
            android:paddingRight="20dp"
            android:maxLines="12"
            android:layout_gravity="center"
            android:minLines="8"
            android:scrollbars="vertical"
            android:background="@drawable/button_detail_kegiatan"
            android:gravity="top|left"
            />

        <RadioGroup
            android:id="@+id/emotGroup2"
            android:layout_margin="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/sedih1"
                android:layout_marginEnd="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_sedih_sekali"
                android:button="@null" />

            <RadioButton
                android:id="@+id/netral1"
                android:layout_marginRight="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_netral"
                android:button="@null" />

            <RadioButton
                android:id="@+id/senang2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_senang_sekali"
                android:button="@null" />

        </RadioGroup>

        <Button
            android:id="@+id/ceritaBtn"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:background="@drawable/buttonsolusi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cerita"
            android:textColor="@android:color/white"/>
    </LinearLayout>
    </androidx.cardview.widget.CardView>

    </FrameLayout>
    </ScrollView>