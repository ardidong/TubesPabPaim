<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TambahQuoteSaranActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/kata_quote_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:gravity="center_horizontal"
            android:padding="16dp"
            android:text="Hai, tidak apa apa kalo kamu merasa seperti itu hari ini. Semoga lain kali kamu bisa lebih senang ya. Ini ada sedikit kata mutiara untukmu!"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/showQuote"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="64dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="32dp"
            android:layout_weight="2"
            android:textSize="15sp"
            android:background="@drawable/backgroundkegiatan"
            android:gravity="center"
            android:minLines="5"
            android:padding="8dp" />

        <TextView
            android:id="@+id/milikmu_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="64dp"
            android:gravity="center_horizontal"
            android:padding="16dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textSize="20sp" />


        <Button
            android:id="@+id/btn_ok_tampil_quote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:background="@drawable/buttonsolusi"
            android:text="Okay"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

    </LinearLayout>

</ScrollView>