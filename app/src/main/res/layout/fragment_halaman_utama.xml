<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#FFFFFF"
    android:layout_height="match_parent"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HalamanUtamaFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mentalist"
                android:layout_marginStart="20dp"
                android:textSize="30sp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/amaranth"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="20dp"
                android:textColor="@android:color/darker_gray"
                android:text="Selamat Datang, "/>

            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:textColor="@android:color/darker_gray"
                android:text="Bagaimana kabarmu hari ini? "/>
            </LinearLayout>

                <Button
                    android:id="@+id/btn_saran_menujur_serius"
                    android:layout_width="120dp"
                    android:text="Kumpulan Saran"
                    android:textColor="@color/colorWhite"
                    android:layout_height="60dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/button_hijau"
                    android:visibility="invisible"
                    />


            </LinearLayout>

            <TextView
                android:id="@+id/namaUserTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginTop="5dp"
                android:fontFamily="sans-serif-medium"
                android:layout_marginLeft="20dp"
                android:textSize="24dp"
                android:layout_marginBottom="30dp"/>



            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/timelineKegiatan">
            </androidx.recyclerview.widget.RecyclerView>

        </LinearLayout>






</FrameLayout>